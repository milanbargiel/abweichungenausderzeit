{% macro textualteaser(title, link) %}
<div class="grid-item col-sm-6 col-md-4">
  <div class="teaser">
    <a class="teaser__header" href="#">{{ title | safe }}</a>
    <div>
      {{ caller() }}
    </div>
    <a class="teaser__readmore" href="{{ link }}">WEITERLESEN</a>
  </div>
</div>
{% endmacro%}